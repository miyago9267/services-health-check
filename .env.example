# Example environment overrides (optional)
# These override values from configs/example.yaml
# ENV=local # .env.local/.env.production/.env.development/.env.bak

# Check
CHECK_TYPE=http
CHECK_NAME=example-http
CHECK_URL=https://example.com
CHECK_INTERVAL=30s
CHECK_TIMEOUT=5s
CHECK_SCHEDULE=*/5 * * * *
CHECK_SKIP_VERIFY=false
CHECK_DOMAIN=example.com
CHECK_TOKEN=your-cloudflare-token

