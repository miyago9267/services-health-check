# CHECK_SKIP_VERIFY=false

# Policy
POLICY_NAME=default
POLICY_COOLDOWN=10m
POLICY_NOTIFY_ON_RECOVERY=true

# Channel
CHANNEL_TYPE=discord
CHANNEL_NAME=discord-alert
CHANNEL_URL=https://discord.com/api/webhooks/your/webhook
CHANNEL_USERNAME=healthd
CHANNEL_TIMEOUT=5s
# SMTP (channel override)
# CHANNEL_SMTP_HOST=smtp.example.com
# CHANNEL_SMTP_PORT=587
# CHANNEL_SMTP_USERNAME=your-user
# CHANNEL_SMTP_PASSWORD=your-password
# CHANNEL_SMTP_FROM=alert@example.com
# CHANNEL_SMTP_TO=ops@example.com,dev@example.com
# CHANNEL_SMTP_SUBJECT=[healthd] alert
# CHANNEL_SMTP_IMPLICIT_TLS=false
# CHANNEL_SMTP_SKIP_VERIFY=false

# Route
ROUTE_MATCH_STATUS=CRIT
ROUTE_TO=discord-alert

# Log
LOG_LEVEL=info
LOG_FORMAT=text
